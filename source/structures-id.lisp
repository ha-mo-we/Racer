(in-package :racer)

(defvar *structure-id-counter*)         ; incremented for every created racer structure
                                        ; used as unique hash id for sorting and hashing

;; Required for ACL: otherwise value for hash-id is not reliably computed
(defun racer-atomic-incf-structure-id-counter ()
  (racer-atomic-incf *structure-id-counter*))

;;; structure must be included under ACL 
;;; if the includer is used in an equal/concept-hash hashtable
(defstruct (racer-structure-id
            (:include racer-set-element))
  (hash-id (racer-atomic-incf-structure-id-counter)))
